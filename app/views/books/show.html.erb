<%= render 'users/list', users: @users  %>


<div class="col-lg-8">
<h2>Book detail</h2>

<table class="table">
    <tbody>
        <tr>
            <td><%= attachment_image_tag current_user, :profile_image, :fill,50, 50, format: 'jpeg', fallback: "no_image.jpg" %></br>
            <%= @user.name %></td>
            <td><%= @book_list.title %></td>
            <td><%= @book_list.body %></td>

            <% if @book_list.user == current_user %>
            <td><%=link_to "edit", edit_book_path(@book_list) %></td>

            <td><%= link_to "destroy", book_path(@book_list),method: :delete %></td>
            <% end %>

        </tr>
    </tbody>
</table>
</div>