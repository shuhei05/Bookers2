<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="h-25">


<h2>User info</h2>

<%= attachment_image_tag current_user, :profile_image, :fill,50, 50, format: 'jpeg', fallback: "no_image.jpg" %>

<table class="table">
    <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
    </tr>
</table>

<p><%= link_to "編集", edit_user_path(current_user.id) %></p>


<h2>New Book</h2>
<p>Title</p>
<%= form_with model:@book, local:true do |f| %>
 <%= f.text_field :title %>
<p>Opinion</p>
<p><%= f.text_field :body %></p>
<%= f.submit 'Create Book' %>
<% end %>

</div>
</div>
</div>
</div>